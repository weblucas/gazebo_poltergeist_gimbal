<?xml version="1.0" ?>
<robot name="simple_box" xmlns:xacro="http://www.ros.org/wiki/xacro">


  <gazebo >
   <plugin name="gimbal_controller" filename="libgazebo_poltergeist_gimbal_plugin.so"/>

  </gazebo>


    <link name='gimbal_support_link'>
      <origin xyz="2 0 1"/>
      <inertial>
        <mass value="10.0" />
      <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="100.0"  iyz="0.0"  izz="1.0" />
        <origin xyz="0 0 0" />
      </inertial>
      <self_collide>0</self_collide>
      <kinematic>0</kinematic>
      <visual >
        <origin xyz="2 0 1"/>
        <geometry>
        <box size="1 1 4" />
       </geometry>
      </visual>
      <collision>
      <origin xyz="2 0 1"/>
      <geometry>
        <box size="1 1 4" />
      </geometry>
    </collision>
    </link>

    <link name='camera_mount_link'>
      <origin xyz="2 1 3"/>
      <inertial>
        <mass value="0.001" />
      <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="100.0"  iyz="0.0"  izz="1.0" />
        <origin xyz="0 0 0" />
      </inertial>
      <self_collide>0</self_collide>
      <kinematic>0</kinematic>
      <visual >
        <origin xyz="1 0 1"/>
        <geometry>
        <box size="0.1 0.1 0.2" />
       </geometry>
      </visual>
    </link>

 <joint name="my_joint" type="revolute">
    <origin xyz="1 0 0" rpy="0 0 3.1416"/>
    <parent link="gimbal_support_link"/>
    <child link="camera_mount_link"/>
    <calibration rising="0.0"/>
    <dynamics damping="0.0" friction="0.0"/>
    <limit effort="80" velocity="1.0" lower="-999999999" upper="999999999" />
    <safety_controller k_velocity="10" k_position="15" soft_lower_limit="-2.0" soft_upper_limit="0.5" />
 </joint>

   
</robot>
